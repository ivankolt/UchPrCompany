<Window x:Class="UchPR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Швейное производство" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Возьмите стили из вашего файла со стилями для консистентности -->
        <SolidColorBrush x:Key="PrimaryColor1" Color="#B5D5CA"/>
        <SolidColorBrush x:Key="PrimaryColor2" Color="#E0A9AF"/>
        <SolidColorBrush x:Key="TextWhite" Color="#FFFFFF"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <!-- Заголовок -->
            <RowDefinition Height="*"/>
            <!-- Основной контент -->
        </Grid.RowDefinitions>

        <!-- ======================= ЗАГОЛОВОК ======================= -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryColor1}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Логотип и название -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Image Source="/Images/Logo/logo-01.jpg" Margin="10" Stretch="Uniform"/>
                    <TextBlock Text="Швейное производство"
                               VerticalAlignment="Center" FontSize="18" FontWeight="Bold"
                               Foreground="{StaticResource TextWhite}" Margin="10,0,0,0"/>
                </StackPanel>

                <!-- Информация о пользователе -->
                <TextBlock x:Name="UserInfo" Grid.Column="1" Text="Пользователь: [Имя], Роль: [Роль]"
                           HorizontalAlignment="Right" VerticalAlignment="Center"
                           Foreground="{StaticResource TextWhite}" Margin="0,0,20,0"/>

                <!-- Кнопка выхода -->
                <Button x:Name="btnExit" Grid.Column="2" Content="Выход"
                        Height="40" Width="100" Margin="10"
                        Background="{StaticResource PrimaryColor2}"
                        Foreground="{StaticResource TextWhite}"
                        Click="btnExit_Click"/>
            </Grid>
        </Border>

        <!-- ======================= ОСНОВНОЙ КОНТЕНТ ======================= -->
        <!-- Frame - это специальный контейнер, который может отображать страницы (Page) -->
        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
