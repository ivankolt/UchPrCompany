<Page x:Class="UchPR.WarehousePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Склад материалов" Loaded="Page_Loaded">

    <Page.Resources>
        <SolidColorBrush x:Key="PrimaryColor1" Color="#B5D5CA"/>
        <SolidColorBrush x:Key="PrimaryColor2" Color="#E0A9AF"/>
        <SolidColorBrush x:Key="TextWhite" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextBlack" Color="#000000"/>
        <SolidColorBrush x:Key="AdditionalColor1" Color="#D1EEFC"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <!-- Заголовок -->
            <RowDefinition Height="Auto"/>
            <!-- Фильтры и управление -->
            <RowDefinition Height="*"/>
            <!-- Таблица -->
            <RowDefinition Height="60"/>
            <!-- Кнопки управления -->
        </Grid.RowDefinitions>

        <!-- ======================= ЗАГОЛОВОК ======================= -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryColor1}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image Grid.Column="0" Source="/Images/Logo/logo-01.jpg" 
                       Width="60" Height="60" Margin="10" Stretch="Uniform"/>

                <TextBlock Grid.Column="1" Text="Учет материалов на складе" 
                           VerticalAlignment="Center" FontSize="18" FontWeight="Bold"
                           Foreground="{StaticResource TextWhite}" Margin="15,0,0,0"/>
            </Grid>
        </Border>

        <!-- ======================= ПАНЕЛЬ ФИЛЬТРОВ ======================= -->
        <Border Grid.Row="1" Background="{StaticResource AdditionalColor1}" Padding="20,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Тип материалов:" VerticalAlignment="Center" 
                           FontSize="14" FontWeight="SemiBold"
                           Foreground="{StaticResource TextBlack}"/>
                <ComboBox x:Name="cmbMaterialType" Width="150" Margin="10,0" 
                          FontSize="12" Height="30"
                          SelectionChanged="cmbMaterialType_SelectionChanged">
                    <ComboBoxItem Content="Ткани"/>
                    <ComboBoxItem Content="Фурнитура"/>
                </ComboBox>
            </StackPanel>
        </Border>

        <!-- ======================= ТАБЛИЦА ОСТАТКОВ ======================= -->
        <DataGrid x:Name="dgMaterials" Grid.Row="2" Margin="20"
                  AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False"
                  AlternatingRowBackground="{StaticResource AdditionalColor1}"
                  GridLinesVisibility="Horizontal" HeadersVisibility="Column">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Артикул" Binding="{Binding Article}" Width="1.5*"/>
                <DataGridTextColumn Header="Наименование" Binding="{Binding Name}" Width="3*"/>
                <DataGridTextColumn Header="Остаток" 
                                   Binding="{Binding DisplayQuantity, StringFormat={}{0:F2}}" Width="1*"/>

                <DataGridTemplateColumn Header="Единица измерения" Width="1.5*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox ItemsSource="{Binding AvailableUnits}" 
                                      DisplayMemberPath="Name"
                                      SelectedItem="{Binding SelectedUnit, UpdateSourceTrigger=PropertyChanged}"
                                      SelectionChanged="UnitComboBox_SelectionChanged"
                                      FontSize="11"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="Средняя цена (за ед.)" 
                                   Binding="{Binding AverageCost, StringFormat=C}" Width="1.5*"/>
                <DataGridTextColumn Header="Общая стоимость" 
                                   Binding="{Binding TotalCost, StringFormat=C}" Width="1.5*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- ======================= КНОПКИ УПРАВЛЕНИЯ ======================= -->
        <Border Grid.Row="3" Background="{StaticResource PrimaryColor2}" Padding="20,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="btnSetThreshold" Content="Настроить списание" 
                        Background="{StaticResource TextWhite}" 
                        Foreground="{StaticResource TextBlack}"
                        FontSize="12" Padding="15,5" Margin="0,0,10,0"
                        ToolTip="Настроить порог автоматического списания обрезков для выбранного материала"
                        Click="btnSetThreshold_Click"/>
                <Button x:Name="btnScrapLog" Content="Журнал списаний" 
                        Background="{StaticResource TextWhite}" 
                        Foreground="{StaticResource TextBlack}"
                        FontSize="12" Padding="15,5"
                        Click="btnScrapLog_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
