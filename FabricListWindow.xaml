<Window x:Class="UchPR.FabricListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление тканями" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Управление тканями" 
                   FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="10"/>

        <!-- Панель поиска и фильтров -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Поиск:" VerticalAlignment="Center" Margin="5"/>
            <TextBox Grid.Column="1" x:Name="txtSearch" Margin="5" TextChanged="TxtSearch_TextChanged"/>

            <TextBlock Grid.Column="2" Text="Единица измерения:" VerticalAlignment="Center" Margin="5"/>
            <ComboBox Grid.Column="3" x:Name="cmbUnit" Margin="5" SelectionChanged="CmbUnit_SelectionChanged"/>

            <TextBlock Grid.Column="4" Text="Состав:" VerticalAlignment="Center" Margin="5"/>
            <ComboBox Grid.Column="5" x:Name="cmbComposition" Margin="5" SelectionChanged="CmbComposition_SelectionChanged"/>

            <Button Grid.Column="7" x:Name="btnRefresh" Content="Обновить" 
                    Width="80" Height="25" Margin="5" Click="BtnRefresh_Click"/>
        </Grid>

        <!-- DataGrid со списком тканей -->
        <DataGrid Grid.Row="2" x:Name="dgFabrics" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  SelectionMode="Single"
                  AlternatingRowBackground="LightGray"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding fabric_article}" Width="50" IsReadOnly="True"/>
                <DataGridTextColumn Header="Артикул" Binding="{Binding fabric_article}" Width="100"/>
                <DataGridTextColumn Header="Название" Binding="{Binding fabric_name}" Width="150"/>
                <DataGridTextColumn Header="Цвет" Binding="{Binding ColorName}" Width="100" IsReadOnly="True"/>
                <DataGridTextColumn Header="Рисунок" Binding="{Binding PatternName}" Width="100" IsReadOnly="True"/>
                <DataGridTextColumn Header="Состав" Binding="{Binding CompositionName}" Width="120" IsReadOnly="True"/>

                <!-- Остатки в учетной единице -->
                <DataGridTextColumn Header="Остаток (учетн.)" Binding="{Binding StockQuantity}" Width="100" IsReadOnly="True"/>
                <DataGridTextColumn Header="Учетн. ед." Binding="{Binding AccountingUnitName}" Width="80" IsReadOnly="True"/>

                <!-- Остатки в выбранной единице -->
                <DataGridTextColumn Header="Остаток (выбр.)" Binding="{Binding ConvertedQuantity}" Width="100" IsReadOnly="True"/>
                <DataGridTextColumn Header="Выбр. ед." Binding="{Binding SelectedUnitName}" Width="80" IsReadOnly="True"/>

                <!-- Финансовая информация -->
                <DataGridTextColumn Header="Стоимость (руб.)" Binding="{Binding TotalCost}" Width="100" IsReadOnly="True"/>
                <DataGridTextColumn Header="Средн. цена" Binding="{Binding AveragePrice}" Width="100" IsReadOnly="True"/>

                <!-- Лимиты и пороги -->
                <DataGridTextColumn Header="Мин. остаток" Binding="{Binding MinStock}" Width="80"/>
                <DataGridTextColumn Header="Лимит обрезков" Binding="{Binding ScrapLimit}" Width="100"/>

                <!-- Статус -->
                <DataGridTemplateColumn Header="Статус" Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Ellipse Width="15" Height="15" Fill="{Binding StatusColor}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>

        </DataGrid>

        <!-- Панель кнопок -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="10">
            <Button x:Name="btnAdd" Content="Добавить" 
                    Width="100" Height="30" Margin="5" Click="BtnAdd_Click"/>
            <Button x:Name="btnEdit" Content="Редактировать" 
                    Width="100" Height="30" Margin="5" Click="BtnEdit_Click"/>
            <Button x:Name="btnReceive" Content="Поступление" 
                    Width="100" Height="30" Margin="5" Click="BtnReceive_Click"/>
            <Button x:Name="btnScrap" Content="Списать обрезки" 
                    Width="120" Height="30" Margin="5" Click="BtnScrap_Click"/>
            <Button x:Name="btnSettings" Content="Настройки" 
                    Width="100" Height="30" Margin="5" Click="BtnSettings_Click"/>
        </StackPanel>
    </Grid>
</Window>
